{% sw_extends '@Storefront/storefront/page/product-detail/index.html.twig' %}

{% block page_product_detail_content %}
    {% if page.product.extension('promotions').elements|length > 0 %}
        {% for promotion in page.product.extension('promotions').elements%}
            <div class="badge badge-primary">
                {{ promotion.name }}
            </div>
        {% endfor %}
    {% endif %}
    {{ parent() }}
{% endblock %}
